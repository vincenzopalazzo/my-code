<configuration scan="true">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>
  
  <logger name="it.unibas.codicefiscale.modello" level="info"/>
  <logger name="it.unibas.codicefiscale.modello.CodiceFiscale" level="info"/>
  <logger name="it.unibas.codicefiscale.controllo" level="debug"/>
  <logger name="it.unibas.codicefiscale.persistenza" level="info"/>  
  <logger name="it.unibas.codicefiscale.vista" level="debug"/>
    <logger name="it.unibas.codicefiscale" level="debug"/>
</configuration>